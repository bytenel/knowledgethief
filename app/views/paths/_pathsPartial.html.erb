<div class="container">
  <!-- Used to load home page dynamically -->
  <h1>Listing paths</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @paths.each do |path| %>
    <tr>
      <td><%= path.name %></td>
      <td><%= path.content %></td>
      <td><%= link_to 'Show', path %></td>
      <td><%= link_to 'Edit', edit_path_path(path) %></td>
      <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Path', new_path_path %>
</div>