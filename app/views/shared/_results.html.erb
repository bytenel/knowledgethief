<div id="resultWrapper" class="item thumb"> <!-- result wrapper -->
    <div class="resourceThumb" value="<%= resource.id %>">
        <%= link_to(image_tag(resource.snapshot.url, :style => "height:257px;width=257px;", :class=>"thumbImg"), url_for(resource.link)) %>  
    </div> 
     <div class="path">
       <% if @user_paths %>
       <%= image_tag("plus_small.png", :class=>"ico") %> 
         <% for path in @user_paths %>
            <%= render :partial => "shared/path_nav_bar",
                 :locals =>{ :path => path, :resource =>resource } %>
         <% end %> 
         <% if @user_paths.empty? %>
            <ul class="nav">
              <li>
                <%= link_to 'Create a path', new_path_path %>
              </li>
            </ul>
         <% end %>
       <% end %>
    </div>  
    <div class="text">
     <%= resource.description %>

   
    </div>

   	<div id="hoverBox">
        <div id="thumbs">
            <% if current_user %>
                <%= link_to image_tag("thumbUp.png", :style => "height:18px;margin-top:8px;"), vote_resource_path(resource, type: "up"),
                    method: "post"
                     %>
            <% else %>
                <%= image_tag("thumbUp.png", :style => "height:18px;margin-top:8px;") %>
            <% end %>
            	<%= resource.reputation_for(:votes).to_i %>
            |
        </div>

        <div id="resourceTitle">
            <%= resource.title %>
        </div>

    </div>
 
</div> <!-- end result wrapper -->
