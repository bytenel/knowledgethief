<div class="container" style="width:100%;!important;" >
	<section id="left">
		<div id="userInfo">
			<div id="userInfoLeft">
				<div class="profilePicture">
					<% if !current_user.image.nil? %>
						<a href="#"><img src=<%= current_user.image%> width="150" height="150" /></a>
					<% else %>
						<%= image_tag('user_placeholder.png', :width => '150', :height => "150") %>
					<% end %>
				</div>
				<div id="userName">
					<% if current_user.first_name.nil? && current_user.last_name.nil? %>
						<h1>John Doe </h1>
					<% else %>
						<h1><%=current_user.first_name%> <%=current_user.last_name%></h1>
					<% end %>
				</div>
				<div id ="userStats">
					<ul class="numbers">
						<li>Reputation<strong> <%= current_user.reputation_for(:votes).to_i %></strong></li>
						<li>Comment<strong><%= @comments.count %></strong></li>
						<li class="tempnobrdr">Resource<strong> <%= @rc.count %></strong></li>
					</ul>
				</div>
			</div>
			<div id="userInfoRight">
				<div id = "userDescription">
					<h2 >About Me:</h2>
					<% if current_user.bio.nil? %>
						You haven't written anything about yourself yet.
					<% else %>
						<p ><%=current_user.bio%></p>
					<% end %>
				</div>
			</div>
		</div>
		<div style="clear:both;"/></div>
		<ul>
			<li id="userTab"><a id="userTabLink" class="userTabLink_resource">Resource</a></li>
			<li id="userTab">||</li>
			<li id="userTab"><a id="userTabLink" class="userTabLink_path">Path</a></li>
		</ul>
		<div id = "userResources" >
			<h1>My Resources:</h1>
			<% if @rc.empty? %>
				You haven't posted anything yet.
			<% else %>
				<div id="userResourceContainer" style="margin-top:5px;">
					<%= render :partial => 'result', :collection => @rc, :as => 'resource' %>
				</div>
			<% end %>
		</div>
		<div style="clear:both;"/></div>
		<div id = "userPaths" style="display:none">
			<h1>My Path:</h1>
			<%= render :partial => 'path' %>
		</div>
	</section>
	<section id="right">
		<div class="gcontent">
			<div class="head"><h1>Badges(3)</h1></div>
			<div class="boxy">
				
				<div class="badgeCount">
					<a href="#"><%= link_to image_tag("foursquare-badge.png")%></a>
					<a href="#"><%= link_to image_tag("foursquare-badge.png")%></a>
					<a href="#"><%= link_to image_tag("foursquare-badge.png")%></a>
				</div>
				
				<span><a href="#" style="color:black">See allâ€¦</a></span>
			</div>
		</div>
		
		<div class="gcontent">
			<div class="head"><h1>Friends List</h1></div>
			<div class="boxy">
				<p>Your friends - 106 total</p>
				
				<div class="tempfriendslist clearfix">
					<div class="tempfriend">
						<a href="#"><%= link_to image_tag("friend_default.jpg"), :width=>"30", :height=>"30", :alt=>"Jerry K.", :class=>".cusimg"%></a>
						<span ><a href="#" class="friendly">Jerry K.</a></span>
					</div>
					
					<div class="tempfriend">
						<a href="#"><%= link_to image_tag("friend_default.jpg"), :width=>"30", :height=>"30", :alt=>"Katie F.", :class=>".cusimg" %></a>
						<span ><a href="#" class="friendly">Katie F.</a></span>
					</div>
					
					<div class="tempfriend">
						<a href="#"><%= link_to image_tag("friend_default.jpg"), :width=>"30", :height=>"30", :alt=>"Ash K.", :class=>".cusimg" %></a>
						<span ><a href="#" class="friendly">Ash K.</a></span>
					</div>
					
					<div class="tempfriend">
						<a href="#"><%= link_to image_tag("friend_default.jpg"), :width=>"30", :height=>"30", :alt=>"Sponge B.", :class=>".cusimg" %></a>
						<span ><a href="#" class="friendly">Sponge B.</a></span>
					</div>
					
					<div class="tempfriend">
						<a href="#"><%= link_to image_tag("friend_default.jpg"), :width=>"30", :height=>"30", :alt=>"Frank", :class=>".cusimg" %></a>
						<span ><a href="#" class="friendly">Frank</a></span>
					</div>
					
