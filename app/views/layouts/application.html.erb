<!DOCTYPE html>

<head>
<title>Knowledge Thief</title>
<%= csrf_meta_tag %>
<%= stylesheet_link_tag "application" %>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800" rel= "stylesheet" type="text/css"/>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <%= render "shared/header" %>
        <%= render :partial => 'layouts/resourceSlideShow' %>
        <div id="contentWrapper">
            <div id="topSection"onclick="c(event);">
                
                <%= yield :top_section %>
            </div>
            <div class="bottomWrapper">
                <%= yield :bottom_wrapper %>
                <%= yield %>
            </div>
            <div class="addNewResourceForm" style="display:none;">
                <%= render :partial => 'layouts/addResourceForm' %>
            </div>
            <div class="addNewQuestionForm" style="display:none;">
                <%= render :partial => 'layouts/addQuestionForm' %>
            </div>
        </div> <!-- end contentWrapper -->

    </div> <!-- end wrapper -->
    <%= render :partial => 'layouts/resourcebar' %>
    <%= javascript_include_tag "application" %>
</body>

