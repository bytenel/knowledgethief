var $pinElements = $('<%= j render :partial => 'shared/pinresults', :collection => @resources, :as => 'resource' %>');
var $container = $('#columns');

$pinElements.imagesLoaded(function(){
	$container.append($pinElements).masonry( 'appended', $pinElements, true );
});
$pinElements.css({opacity:1}).addClass('blur');
<% if @resources.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate(@resources) %>');
<% else %>
  $('.pagination').remove();
<% end %>
