<!DOCTYPE html>

<head>
<title>Knowledge Thief</title>
    <%= stylesheet_link_tag "style" %>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800" rel= "stylesheet" type="text/css"/>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js" type="text/javascript"></script>
</head>

<body>
    <div id="wrapper">
        <%= render "shared/header" %>
        <div id="contentWrapper">
            <div id="topSection">
              <%= yield :top_section %> 
            </div>        
            <div class="bottomWrapper">
                <%= yield :bottom_wrapper %>
            </div>
        </div> <!-- end contentWrapper -->

    </div> <!-- end wrapper -->
</body>

<div class="slide-out-div" style="display:none;">
    <a class="handle" href="#">Content</a>
    <h1>Comments</h1>
    <div id="commentsHolder">
    <ul class="commentsList">
    </ul>
	</div>
    <% if(current_user) %>
    	<form accept-charset="utf8" class="commentform" action="/comments/0/forresource" method="get">
		<input id="commenttext" placeholder="comment..." type="text">
		 <button type="button" id="saveComment" >save</button>
	</form>
	<% else %>
		<div> Login to comment </div>
	<% end %>
</div>
	</body>
	</html>