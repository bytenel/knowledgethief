<div class="pin" value="<%= resource.id %>">
	<div class="resourceButtons">
		

	<div class="path">
		<button class="path_bttn">
			Paths
		</button>
		
		<div class="menu">
	    <% unless Path.all.empty? %>
	         <% for path in Path.all %>
	            <%= render :partial => "shared/path_nav_bar",
	                 :locals =>{ :path => path, :resource =>resource } %>
		     <% end %> 
	    <% else %>
		       <ul class="nav">
	              <li>
	                <%= link_to 'Create a path', new_path_path %>
	              </li>
	           </ul>
	    <% end %>
		</div>
    </div>  
	</div>
	<div class="resourceContentHolder">
		<div class="resourceImage">
			 <%= link_to(image_tag(resource.snapshot.url, :class=>"thumbImg"), url_for(resource.link)) %> 
		</div>
		<div id="resourceInfo">
			<div class="upvotesCount">
	       		<%= resource.reputation_for(:votes).to_i %> 
	   		</div>
	   		<div class="resourceTitle">
	       		<%= resource.title %>
	       	</div>
	    </div>
		<div class="resourceDescription">
	    	<%= resource.description %>
	    </div>
	</div>

</div>