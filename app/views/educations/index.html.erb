<div style="padding-left:20%">
<h1>Listing educations</h1>
<% @educations.each do |edu|%>
    <div id='edu'>
        
          School Name: <%= edu.school_name %><br>
          Begin:  <%= edu.since_year %><br>
          End: <%=edu.end_year%><br>
          Major: <%= edu.major %><br>
          City: <%= edu.city%><br>
          State: <%= edu.state %><br>
    </div>

  <%= link_to image_tag('edit_button.png', :size => '70x30'), edit_education_path(edu) %>
  <%= link_to image_tag('delete_button.png', :size => '70x30'), edu, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to image_tag('back_button.png', :size => '70x30'), user_profile_path %>
